
@{
    ViewBag.Title = "Login";
}

<div class="container p-1 bg-secondary .w-50 mx-auto my-5 .mh-100 " style="height:708px; width:808px">

    <div class="p-3 bg-light " style="height:700px;width:800px;">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <p class="text-center h3">Üye Girişi</p>
            <hr /><br /><br /><br />

            <div class="form-group">
                <label for="username" class="text-center">Kullanıcı Adı</label>
                <label>@Html.ValidationMessage("UserName", "", new { @class = "text-danger" })</label>
                @Html.TextBox("UserName", null, new { @class = "form-control" })

            </div>

            <div class="form-group">
                <label for="password">Şifre</label>
                <label>@Html.ValidationMessage("Password", "", new { @class = "text-danger" })</label>

                @Html.TextBox("Password", null, new { @class = "form-control", Type = "password" })
            </div>
            <br />
            
            <label>@Html.ValidationSummary("", new { @class = "text-danger" })</label>
            <div class="text-center">
                <button type="submit" class="btn btn-secondary btn-center" style="width:370px">Giriş Yap</button>
            </div>
            <div class="text-center">
                @ViewBag.Error
            </div>
        }
    </div>


</div>


