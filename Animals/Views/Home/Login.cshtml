
@{
    ViewBag.Title = "Login";
}

<div class="container p-1 bg-secondary .w-50 mx-auto my-5 .mh-100 " style="height:708px; width:808px">

    <div class="p-3 bg-light " style="height:700px;width:800px;">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <p class="text-center h3">Üye Girişi</p>
            <hr /><br /><br /><br />

            <div class="form-group">
                <label for="email" class="text-center">E-Posta Adresi</label>
                <label>@Html.ValidationMessage("EMail", "", new { @class = "text-danger" })</label>
                @Html.TextBox("EMail", null, new { @class = "form-control", Type = "email" })
               
                @*<small class="form-text text-muted">
                        Lütfen doğru bir e-posta adresi giriniz.
                    </small>*@
            </div>

            <div class="form-group">
                <label for="password">Şifre</label>
                <label>@Html.ValidationMessage("Password", "", new { @class = "text-danger" })</label>
               
                @Html.TextBox("Password", null, new { @class = "form-control", Type = "password" })
            </div>
            <br />

            <div class="text-center">
                <button type="submit" class="btn btn-secondary btn-center" style="width:370px">Giriş Yap</button>

            </div>
            <div class="text-center">
                @ViewBag.Error
            </div>
        }

    </div>


</div>


