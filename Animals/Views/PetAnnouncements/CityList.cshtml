@model IEnumerable<Animals.Models.Cities>
<div class="p-2 card card-body bg-light my-3 pre-scrollable" style="width:300px;">
    <h4 class="container">Şehir</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/PetAnnouncements/ListforCity">Tümünü Listele</a>
                </li>
            </ul>
        </div>
        @foreach (var i in Model)
        {
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <li>
                        <a href="/PetAnnouncements/ListforCity/@i.CityID">@i.City</a>
                    </li>
                </ul>
            </div>
        }

    </div>
</div>
