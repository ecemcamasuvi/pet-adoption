@model IEnumerable<Animals.Models.PetType>

<div class="p-2 card card-body bg-light my-3" style="width:300px;">
    <h4 class="container">Evcil Hayvan Türü</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">
                <li>
                    <a href="/PetAnnouncements/List">Tümünü Listele</a>
                </li>
            </ul>
        </div>
        @foreach (var i in Model)
        {
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <li>
                        <a href="/PetAnnouncements/List/@i.TypeID">@i.Type</a>
                    </li>
                </ul>
            </div>
        }

    </div>
</div>
<!-- /.row -->
